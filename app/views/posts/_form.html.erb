<% if post.errors %>
  <ul>
    <% post.errors.full_messages.each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for post do |f| %>
  <%= f.label "Title:" %>
  <br />
  <%= f.text_field :title %>
  <br />
  <br />
  <%= f.label "Content:" %>
  <br />
  <%= f.text_field :content %>
  <br />
  <br />
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |cat|%>
    <%= cat.label(class: 'checkbox inline') {cat.check_box() + cat.text } %><br />
  <% end %>
  <br />
  <br />
  <%= f.submit "Submit" %>
<% end %>
